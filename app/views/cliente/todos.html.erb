<h2>Clientes</h2>
<br>
<div class="row">
	<div class="col-md-6">
		<a class="btn btn-primary" href="/cliente/agregar">Registrar Nuevo Cliente</a>
	</div>
</div>
<br>

<div class="row">
	<div class="col-md-12">
		<table class="table">
		<thead>
			<tr>
				<th>Id</th>
				<th>RFC</th>
				<th>Nombre</th>
				<th></th>
				<th></th>
			</tr>
		</thead>
		<tbody>
			<% @clientes.each do |cliente| %>
			<tr>
				<td> <%= cliente.id %> </td>
				<td> <%= cliente.rfc %> </td>
				<td> <%= cliente.nombre_cliente %> </td>
				<td><a href="/cliente/eliminar/<%= cliente.id %>" class="btn btn-danger">Eliminar</a></td>
				<td><a href="/cliente/modificar/<%= cliente.id %>" class="btn btn-info">Modificar</a></td>
			</tr>
			<% end %>
		</tbody>
	</table>
	</div>
</div>